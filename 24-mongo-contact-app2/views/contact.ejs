<div class="container mt-5">
  <div class="row">
    <div class="col-md-8">
      <h2>Daftar Contact</h2>

      <a href="/contact/add" class="btn btn-primary mt-3 mb-3">Add Data Contact</a>

      <% if (msg.length !== 0) { %>
      <div class="alert alert-success" role="alert"><%= msg %></div>
      <% } %>

      <table class="table">
        <thead class="table-dark">
          <tr>
            <th scope="col">#</th>
            <th scope="col">Nama</th>
            <th scope="col">No HP</th>
            <th scope="col">Action</th>
          </tr>
        </thead>
        <tbody>
          <% if (contacts.length === 0) { %>
          <tr>
            <td colspan="4">
              <div class="alert alert-danger fw-bold" role="alert">Contact data is still empty!</div>
            </td>
          </tr>
          <% } %> <% contacts.forEach((ct,i) => { i++ %>
          <tr>
            <th scope="row"><%= i++ %></th>
            <td><%= ct.nama %></td>
            <td><%= ct.nohp %></td>
            <td>
              <a href="/contact/<%= ct.nama %> " class="btn btn-success badge rounded-pill"><i class="bi bi-info-circle"></i> Detail</a>
            </td>
          </tr>

          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</div>
